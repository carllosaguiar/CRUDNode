<body> 
    <h2>Registrar Novo Titulo</h2>
    <form action="/plants/add" method="POST">
        <div class="form-group">
          <label for="scientificName">Nome Científico</label>
          <input type="text" class="form-control" id="scientificName" placeholder="Nome Científico">
        </div>
        <div class="form-group">
          <label for="popularName">Nome Popular</label>
          <input type="text" class="form-control" id="popularName" placeholder="Nome Popular">
        </div>
        <div class="form-group">
          <label for="therapeuticProperty">Propriedade Terapeutica</label>
          <input type="text" class="form-control" id="therapeuticProperty" placeholder="Propriedade Terapeutica">
        </div>
        <div class="form-group">
          <label for="wayOfUse">Forma de Uso</label>
          <input type="text" class="form-control" id="wayOfUse" placeholder="Forma de Uso">
        </div>
        <div class="form-group">
          <label for="extractionMethod">Método de Extração</label>
          <input type="text" class="form-control" id="extractionMethod" placeholder="Método de extração">
        </div>
        <div class="form-group">
          <label for="regionOfOrigin">Região de origem</label>
          <input type="text" class="form-control" id="regionOfOrigin" placeholder="Região de origem">
        </div>     
        <div class="form-group">
          <label for="extractionMethod">ml Extração p/ Kg</label>
          <input type="number" class="form-control" id="extractionMethod" placeholder="ml por Kg de material">
        </div>     
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</body>